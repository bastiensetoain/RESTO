{% extends'base.twig' %}


{% block content %}

<main>
 
  
  <div class="w80 m-auto">
  
  
    
    <section class="blog">
        <h2>Derniers Articles</h2>
        <div class="flex row wrap">
            {% for post in articles %}

                   <div class="article">
                    <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>
                    <img src="{{ post.thumbnail }}">
                    </div>


            {% endfor %}
        </div>
    </section>
    
    </div>
    
</main>

{% endblock %}