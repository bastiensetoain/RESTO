{# On utilise le fichier base.twig #}


{% extends'base.twig' %}


{# On insère dans le block le contenu spécfique à la page index #}


{% block content %}

<main>
 
  <section style="background: center center / cover url({{ TimberPost(75).thumbnail }})" class="slider flex center center-h column h500 m-0">
     
     {{ TimberPost(75).content }}
      
  </section>
  
  <div class="w80 m-auto">
  
  
   <section class="dishes">
        <h2 class="menu_title center-text"><a href="{{ TimberPost(6).link }}">{{ TimberPost(6).title }}</a></h2>
        
        
<!-- Boucle afichant les 8 plats -->
       
        <div class="flex row wrap center center-h">
            {% for post in plats %}
                    <div class="plat w45 flex font-s_8 between center-h pl-1 pr-1">
                       <div>
                            <h3>{{ post.title }}</h3>
                            <p>{{ post.content }}</p>
                        </div>
                        <hr>
                        <p>{{post.get_field('prix')}} €</p>
                    </div>

            {% endfor %}
        </div>
    </section>
    
    <section class="featured_dishes">
        <h2 class="flex center-h flex-start">Meilleurs Plats <hr></h2>
        
        
        <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
               
               
                <!-- Boucle afichant dans le swiper slide les plats mis en avant -->
                   
                    {% for post in featured %}
                            <div class="swiper-slide featured flex column center center-h">
                                <div style="background: center center / cover url({{ post.thumbnail }})" class="img w100 h10em ">
                                </div>
                                <div class="featured_content" data-price="{{post.get_field('note')}}">
                                    <h3>{{ post.title }}</h3>
                                    <p>{{post.get_field('prix')}} €</p>
                                    <p style="opacity:0;" class="note">{{post.get_field('note')}} </p>
                                    
                                </div>
                                <div class="rating">
                                        <svg height="25" width="23" class="star star-1 rating" data-rating="1">
                                            <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill:#FFCF15;"/>
                                          </svg>
                                           <svg height="25" width="23" class="star star-2 rating" data-rating="1">
                                            <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill:lightgray;"/>
                                          </svg>
                                          <svg height="25" width="23" class="star star-3 rating" data-rating="1">
                                            <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill:lightgray;"/>
                                          </svg><svg height="25" width="23" class="star star-4 rating" data-rating="1">
                                            <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill:lightgray;"/>
                                          </svg><svg height="25" width="23" class="star star-5 rating" data-rating="1">
                                            <polygon points="9.9, 1.1, 3.3, 21.78, 19.8, 8.58, 0, 8.58, 16.5, 21.78" style="fill:lightgray;"/>
                                          </svg>
                                    </div>
                            </div>
                    {% endfor %}
                
            
            
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>
    </section>
    
      
    
    <section class="blog">
        <h2 class="flex center-h flex-start">Derniers Articles <hr></h2>
        <div class="flex d-row wrap center articles">
           
           
           <!-- Boucle afichant les articles de blog -->
           
            {% for post in articles %}

                   <div class="article flex column center center-h w23">
                    <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>
                    <div style="background: center center / cover url({{ post.thumbnail }})" class="img w100 h10em ">
                                </div>
                    <p>{{ post.post_excerpt }}..</p>
                    </div>


            {% endfor %}
            <div class="more w100 m-3 center-text"><a href="{{ TimberPost(72).link }}">VOIR PLUS</a></div>
        </div>
    </section>
    
    <section class="restos">
        <h2 class="flex center-h flex-start">{{ TimberPost(8).title }} <hr></h2>
        
        
        <!-- Div accueillant les restaurants du fichier json -->
        
        <div class="restaurants">
           <div class="json flex row wrap center center-h"></div>
           <div class="more m-3">
            <a class="m-3" href="{{ TimberPost(8).link }}">VOIR PLUS</a>
            </div>
        </div>
    </section>
    
    </div>
    
</main>

{% endblock %}

