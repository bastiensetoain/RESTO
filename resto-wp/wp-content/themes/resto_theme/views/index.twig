{% extends'base.twig' %}


{% block content %}

<main>
 
  <section class="slider">
      
  </section>
  
   <section class="dishes">
        <h2>The Menu :</h2>
        <div class="plats">
            {% for post in plats %}
                    <div class="plat">
                        <h3>{{ post.title }}</h3>

                        <p>{{ post.content }}</p>
                        <p>{{post.get_field('prix')}} €</p>
                    </div>

            {% endfor %}
        </div>
    </section>
    
    <section class="rated_dishes">
        <h2>Meilleurs Plats</h2>
        <div class="featured">
            {% for post in featured %}
                    <div class="plat">
                        <h3>{{ post.title }}</h3>

                        <p>{{ post.content }}</p>
                        <p>{{post.get_field('prix')}} €</p>
                    </div>

            {% endfor %}
        </div>
    </section>
    
    <section class="blog">
        <h2>Derniers Articles</h2>
        <div class="articles">
            {% for post in posts %}

                   <div class="article">
                    <h3>{{ post.title }}</h3>
                    <img src="{{ post.thumbnail }}">
                    </div>


            {% endfor %}
        </div>
    </section>
    
    <section class="restos">
        <h2>Restaurants</h2>
        <div class="restaurants">
            
        </div>
    </section>
    
</main>

{% endblock %}

